pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/jenkins-python-docker.git'
            }
        }
        stage('Run Python') {
            steps {
                sh 'python3 script.py'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t python-app-demo .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run --rm python-app-demo'
            }
        }
    }
}
